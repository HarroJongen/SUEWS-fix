{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://suews.urban-meteorology.com/schemas/1.0/config.json",
  "title": "SUEWS Configuration Schema v1.0",
  "description": "JSON Schema for SUEWS YAML configuration files",
  "type": "object",
  "required": [
    "name",
    "model",
    "sites"
  ],
  "properties": {
    "name": {
      "type": "string",
      "description": "Configuration name"
    },
    "schema_version": {
      "type": "string",
      "default": "1.0",
      "description": "Schema version"
    },
    "model": {
      "type": "object",
      "description": "Model configuration"
    },
    "sites": {
      "type": "array",
      "minItems": 1,
      "description": "List of sites"
    }
  }
}