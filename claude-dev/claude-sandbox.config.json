{
  "dockerfile": "./claude-dev/Dockerfile.claude-dev",
  "containerPrefix": "suews-research",
  
  "autoStartClaude": true,
  "detached": false,
  "allowedTools": ["*"],
  
  "maxThinkingTokens": 150000,
  "bashTimeout": 900000,
  
  "autoPush": false,
  "autoCreatePR": false,
  
  "setupCommands": [
    "echo '🚀 Initialising SUEWS development environment...'",
    "echo 'Working directory: '$(pwd)",
    "echo 'Available space: '$(df -h . | tail -1 | awk '{print $4}')",
    
    "echo '🐍 Setting up Python environment...'",
    "export PATH=/opt/conda/bin:$PATH",
    "eval \"$(micromamba shell hook --shell bash)\"",
    "micromamba activate suews-dev",
    
    "echo '📦 Verifying SUEWS repository structure...'",
    "if [ ! -d 'src/suews' ]; then echo '❌ SUEWS source not found'; exit 1; fi",
    "if [ ! -d 'test' ]; then echo '❌ Test directory not found'; exit 1; fi",
    "echo '✅ SUEWS repository structure verified'",
    
    "echo '📦 Initialising git submodules...'",
    "git submodule update --init --recursive",
    
    "echo '🔨 Building SUEWS in development mode...'",
    "make dev",
    
    "echo '🧪 Verifying SUEWS installation...'",
    "python -c \"import supy; print(f'✅ SuPy version: {supy.__version__}')\" || echo '⚠️  SuPy import failed - ready for debugging'",
    
    "echo '🔬 Running basic functionality tests...'",
    "python -m pytest test/test_data_model.py -v || echo '⚠️  Some tests failed - ready for development'",
    
    "echo '🎉 SUEWS development environment ready!'",
    "echo '📁 Repository: '$(pwd)",
    "echo '🐍 Python environment: suews-dev'",
    "echo '🛠️  Available commands: suews-build, suews-test, suews-docs, suews-clean'",
    "echo '📚 Documentation: make livehtml'",
    "echo '🏃 Sample run: cd src/supy/sample_run && suews-run .'",
    "echo ''"
  ],
  
  "runArgs": [
    "--cpus", "6",
    "--memory", "12g",
    "--shm-size", "2g",
    "--pids-limit", "1024",
    "--ulimit", "nofile=65536:65536"
  ],
  
  "includeUntracked": false,
  "gitConfig": {
    "preserveHistory": false
  }
}